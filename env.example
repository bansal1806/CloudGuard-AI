# CloudGuard AI Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
APP_NAME=CloudGuard AI
APP_VERSION=1.0.0
PORT=3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database
DATABASE_URL="postgresql://cloudguard:cloudguard_secure_2024@localhost:5432/cloudguard_ai"

# Redis Cache
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD="cloudguard_redis_2024"

# InfluxDB Time Series Database
INFLUXDB_URL="http://localhost:8086"
INFLUXDB_TOKEN="cloudguard-super-secret-admin-token"
INFLUXDB_ORG="CloudGuardAI"
INFLUXDB_BUCKET="metrics"

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Secret for token signing
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# NextAuth Configuration
NEXTAUTH_SECRET="your-nextauth-secret-change-this-in-production"
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# CLOUD PROVIDER CREDENTIALS
# =============================================================================
# AWS Configuration
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="us-east-1"

# Azure Configuration
AZURE_CLIENT_ID="your-azure-client-id"
AZURE_CLIENT_SECRET="your-azure-client-secret"
AZURE_TENANT_ID="your-azure-tenant-id"
AZURE_SUBSCRIPTION_ID="your-azure-subscription-id"

# Google Cloud Configuration
GCP_PROJECT_ID="your-gcp-project-id"
GOOGLE_APPLICATION_CREDENTIALS="/path/to/service-account-key.json"

# =============================================================================
# AI & MACHINE LEARNING SERVICES
# =============================================================================
# AI Service URL
AI_SERVICE_URL="http://localhost:8001"

# OpenAI API (Optional)
OPENAI_API_KEY="your-openai-api-key"

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Prometheus
PROMETHEUS_URL="http://localhost:9090"

# Grafana
GRAFANA_URL="http://localhost:3001"
GRAFANA_ADMIN_PASSWORD="cloudguard_grafana_2024"

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# WebSocket Configuration
NEXT_PUBLIC_WEBSOCKET_URL="ws://localhost:3000"

# Public Environment Variables (exposed to client)
NEXT_PUBLIC_APP_NAME="CloudGuard AI"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Build Configuration
BUILD_STANDALONE=false
SKIP_TYPE_CHECK=false
SKIP_LINT=false
NEXT_TELEMETRY_DISABLED=1

# Debug Configuration
DEBUG=false
LOG_LEVEL=info
